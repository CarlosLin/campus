<%= link_to 'New', new_post_path, class: 'btn btn-default' %>
<div class="row"  id="posts">
  <div class="title">
    附近熱門
    <a href="\" class="more">and more..</a>
  </div>
  <% @posts.each do |post| %>
  <div class="col-xs-6 col-md-2 box">
    <div class="image-wrapper overlay-fade-in" >
    <%= link_to (image_tag post.avatar.url(:medium)), post,class: 'thumbnail' %>
        <div class="image-overlay-content" onclick='location.href="posts/<%=post.id%>"'>
        <h2><%= link_to post.name, post %></h2>
      </div>
      <div class="post_data"><i class="fa fa-eye"> <%= post.hits %></i></div>
    </div>
  </div>
  <% end %>
</div>
