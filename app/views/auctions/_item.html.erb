<tbody>
<dl>  
  <% @auctions.each do |auction| %>
  <tr>
    <dt>name</dt>
    <dd><%= auction.item_name %></dd>
    <dt>price</dt>
    <dd><%= auction.price %></dd>
  </tr>
  <div class="thumbnail">
    <% if auction.photos.first %>
      <%= link_to image_tag(auction.photos.first.image.url(:thumb)), auction_path(auction) %>
    <% else %>
      <%= link_to (image_tag "default.jpg"),auction_path(auction) %>
    <% end %>
  </div>

  <% if auction.editable_by?(current_user) %>
  <%= link_to "Edit", edit_auction_path(auction.id), class: "btn btn-default" %>
  <%= button_to "Delete", auction_path(auction.id), method: :delete, class: "btn btn-default", data: {confirm: "Are you sure?"} %>
  <% end %>
  <% end %>
</dl>
</tbody>
