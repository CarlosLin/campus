<div class="container">
  <h3>歷史紀錄</h3>
  <table class="table table-hover">
    <tr>
      <td>#</td>
      <td>PostName</td>
      <td>Comments</td>
      <td>Likes</td>
      <td></td>
      <td></td>
    </tr>
    <% current_user.posts.each do |f| %>
      <tr>
        <td><%= f.id %></td>
        <td><%= f.name %></td>
        <td><%= f.messages.count %></td>
        <td><%= f.favorites.count %></td>
        <td><%= link_to "Link",f, class: 'btn btn-default' %></td>
        <td><%= link_to "Delete", post_path(f), method: :delete, class: 'btn btn-warning', data: { confirm: 'are you sure?'} %></td>
      </tr>
    <% end %>
  </table>
</div>
