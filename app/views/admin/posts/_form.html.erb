<%= simple_form_for(@admin_post) do |f| %>
  <%= f.error_notification %>
  <%= f.input :name, label: 'Post Title', :input_html => {class: 'form-control'} %>
  <%= f.input :content, placeholder: 'content', :as => :text, :input_html => {class: 'form-control', :rows => 3}%>
  <%= f.button :submit, class: 'btn btn-default' %>
  <%= link_to "Cancel", :back, class: 'btn btn-default' %>
<% end %>
